pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/SAIDHARSHAN75/hello-devops.git'
            }
        }

        stage('Build WAR') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t hello-devops .'
            }
        }

        stage('Deploy Container') {
            steps {
                sh '''
                  docker rm -f hello-devops || true
                  docker run -d --name hello-devops -p 8081:8080 hello-devops
                '''
            }
        }
    }
}
